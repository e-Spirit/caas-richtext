{
  "name": "typescript-node",
  "version": "0.0.1",
  "description": "Minimal example renderer for the new proposed rich text format",
  "main": "index.js",
  "scripts": {
    "build": "tsc --project .",
    "build-and-run": "tsc --project . && node index.js",
    "run-migrator": "tsc --project . && node migration/index.js",
    "tsc": "tsc",
    "test": "jest"
  },
  "author": "Nicolai McAlley",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@types/node": "^22.9.0",
    "fast-xml-parser": "^4.5.0"
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
